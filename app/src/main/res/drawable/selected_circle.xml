                android:bottomLeftRadius="200dp"
                android:bottomRightRadius="200dp"
                />
            <padding
                android:left="10dp"/>
            <stroke
                android:width="5px"
                android:color="@android:color/white"/>
        </shape>
    </item>

    <item>
